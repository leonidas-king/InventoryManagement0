@model Inventory
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add a new Item.</h2>
            <hr>
        </div>
        <div> 
            <label asp-for="ItemName"></label>
            <input asp-for="ItemName" class="form-control"/>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div>
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div>
            <label asp-for="Power"></label>
            <input asp-for="Power" class="form-control" />
        </div>
        <div>
            <label asp-for="MRP"></label>
            <input asp-for="MRP" class="form-control" />
        </div>
        <div>
            <label asp-for="WHOL"></label>
            <input asp-for="WHOL" class="form-control" />
        </div>
        <br>
        <div>
            <button type="submit" class="btn btn-primary" style="width:150px">Save Changes</button>
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>
    </div>
</form>
